{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "App": {
    "DemonstrationMode": false,
    "AccountManyLogin": true
  },
  "Server": {
    "SelfUrl": "http://localhost:8080", // 系统对外的地址，发送给用户的系统邮件等外部链接就使用这个地址拼接URL
    // 设置Web服务的监听地址
    "WebEndPoints": "http://*:5000;https://*:5001"
  },
  "ConnectionStrings": {
    "Default": "Host=localhost;Port=5432;Database=letu;User ID=postgres;Password=123456;"
  },
  "Redis": {
    "IsEnabled": true,
    "Configuration": "127.0.0.1:6379"
  },
  "CorsOrigins": [
    "http://localhost:8080"
  ],
  "Jwt": {
    // ========== 令牌签发配置 (生成JWT) ==========
    "Issuance": {
      "Issuer": "https://localhost:5000", // 签发者
      "Audience": "api", // 接收方
      "Subject": "api-access", // 主题
      "ExpirySeconds": 3600, // 令牌有效时间（秒）
      "SecurityKey": "**********************签名密钥，必须大于32个字符**********************", // 签名密钥，必须大于32个字符
      "Algorithm": "HS256" // 签名算法（可选）
    },
    // ========== 令牌认证配置 (验证JWT) ==========
    "Validation": {
      "RequireHttps": true, // 是否需要HTTPS（生产环境用）
      "ValidateIssuer": true,
      "ValidIssuer": "https://localhost:5000", // 应与签发Issuer一致
      "ValidateAudience": true,
      "ValidAudience": "api", // 应与签发Audience一致
      "ValidateLifetime": true,
      "ClockSkewSeconds": 30, // 时钟偏移容差（秒）
      "RequireSignedTokens": true, // 必须验证签名
      "SecurityKey": "**********************验证密钥（与签发一致）s**********************", // 验证密钥（与签发一致）
      "ValidAlgorithms": [
        "HS256"
      ] // 允许的签名算法列表
    }
  },
  "Oss": {
    "Bucket": "D:\\Sources\\letu-framework\\oss",
    "Domain": "http://localhost:5000/",
    "Aliyun": {
      "AccessKey": "",
      "AccessKeySecret": "",
      "Endpoint": "",
      "Bucket": "",
      "Timeout": 60000,
      "Domain": ""
    }
  },
  "Snowflake": {
    "WorkerId": 1,
    "DataCenterId": 4
  },
  "Mqtt": {
    "Port": 1883,
    "UserName": "admin",
    "Password": "123qwe*"
  }
}